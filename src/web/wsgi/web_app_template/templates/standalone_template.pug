extends mixin/foundation
block layout
    html(lang="en")
        head
            title= template_title
            // Include foundation styles
            link(rel="stylesheet" href="{{url_for('asset', filename='css/foundation.min.css')}}")
            link(rel="stylesheet" href="{{url_for('asset', filename='css/foundation-icons.css')}}")

            link(rel="stylesheet" href="{{url_for('static', filename='css/app.css')}}")


            script(type="text/javascript" src="{{url_for('asset', filename='js/jquery.js')}}")
            script(type="text/javascript" src="{{url_for('asset', filename='js/what-input.js')}}")
            script(type="text/javascript" src="{{url_for('asset', filename='js/foundation.min.js')}}")
            script(type="text/javascript" src="{{url_for('asset', filename='js/knockout-min.js')}}")
            script(type="text/javascript" src="{{url_for('asset', filename='js/Blob.js')}}")
            script(type="text/javascript" src="{{url_for('asset', filename='js/FileSaver.min.js')}}")
            script(type="text/javascript" src="{{url_for('asset', filename='js/underscore-min.js')}}")
            script(type="text/javascript" src="{{url_for('static', filename='js/app.js')}}")
            script(type="text/javascript" src="{{url_for('static', filename='script/app_code.js')}}")

            meta(http-equiv="cache-control" content="max-age=0")
            meta(http-equiv="cache-control" content="no-cache")
            meta(http-equiv="expires" content="0")
            meta(http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT")
            meta(http-equiv="pragma" content="no-cache")
        body
            +row("")
                +column("large","12","")
                    h1.text-center
                        !=page_name

            div(id="ErrorModal", class="reveal", data-reveal="")
                h1 Error
                p(class="lead")
                p(data-bind="text: error_message")

                button(class="close-button", data-close="", aria-label="Close modal", type="button")
                    span(aria-hidden="true") &times;
            !=page_html

            script(type="text/javascript" src="{{url_for('static', filename='js/onrun.js')}}")
